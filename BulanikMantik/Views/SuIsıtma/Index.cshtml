@model List<BulanikMantik.Models.GrafikModel>
@{
    Double[] sicaklikSonuc = (Double[])ViewBag.sicaklikSonuc;
    int[] sicaklikSonucDurumu = (int[])ViewBag.sicaklikSonucDurumu;
    Double[] seviyeSonuc = (Double[])ViewBag.seviyeSonuc;
    int[] seviyeSonucDurumu = (int[])ViewBag.seviyeSonucDurumu;
    Double[] rezidansDegerleri = (Double[])ViewBag.rezidansDegerleri;
    String[] sicaklikSonucDurumuEkran = new string[2];
    String[] seviyeSonucDurumuEkran = new string[2];
    if (sicaklikSonucDurumu[0] != -1)
    {
